  "require": {
    "php": "^5.4|^7.0",
    "league/html-to-markdown": "^4.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8|^5.7|^6.2",
    "jakub-onderka/php-parallel-lint": "^0.9"
  },
  "autoload": {
    "classmap": [
      "lib/"
    ]
  },
  "scripts": {
    "test": [
