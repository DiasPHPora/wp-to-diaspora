{
  "name": "diasphpora/wp-to-diaspora",
  "type": "wordpress-plugin",
  "description": "Share WordPress posts on diaspora*",
  "keywords": ["wordpress", "posts", "diaspora", "social", "sharing"],
  "license": "GPL-2.0",
  "homepage": "https://github.com/DiasPHPora/wp-to-diaspora",
